<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
		controllerName="zemployee.Employee" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	        <form:SimpleForm binding="{/employeeList/1}">
	           <form:title>
	               <core:Title text="Employee"/>
	           </form:title>
	           <form:content>
	                <Label text="Name"/>
	                <Text text="{name}"/>
	                <Label text="Department"/>
	                <Text text="{dept}"/>	                
	           </form:content>
	       </form:SimpleForm>
		</content>
	</Page>
</core:View>